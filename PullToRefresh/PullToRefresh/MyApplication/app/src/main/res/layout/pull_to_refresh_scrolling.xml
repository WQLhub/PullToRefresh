<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:wheel="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="25dp"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:orientation="horizontal">

        <com.example.lenovo.myapplication.PullToRefresh.LoadingLayout
            android:id="@+id/pw_loading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            wheel:header_loading_barColor="@color/loading_color"
            wheel:header_loading_barWidth="1dp"
            wheel:header_loading_circleRadius="13dp"
            wheel:header_loading_fillRadius="true"
            wheel:header_loading_linearProgress="true"
            wheel:header_loading_rimWidth="1dp" />

        <TextView
            android:id="@+id/tv_loading_tip"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:text="下拉刷新"
            android:textColor="@color/loading_color"
            android:textSize="13sp" />
    </LinearLayout>
</RelativeLayout>